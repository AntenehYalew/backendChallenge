<%- include("../partials/header") %> 

<div class="container" >
    <h3 class="form-new-h1">Update "<%=updateId.title%>"</h3>
    <form class="form-new" action="/update/<%=updateId._id%>?_method=PUT" method="POST">
        <div class="form-group">
            <label>Full Name</label>
            <input type="text" class="form-control" name="titlename" value="<%=updateId.titleName%>" required>
        </div> 
        <div class="row">
            <div class="col-6">
                <div class="form-group">
                    <label>Origin</label>
                    <input type="text" class="form-control" name="titleorigin" value="<%=updateId.titleOrigin%>" required>
                </div> 
            </div>
            <div class="col-6">
                <div class="form-group">
                    <label>Destination</label>
                    <input type="text" class="form-control" name="titledestination" value="<%=updateId.titleDestination%>" required>
                </div>   
            </div>
        </div>     
        <div class="form-group">
            <div class="form-check form-check-inline">
            <input type="radio" class="form-check-input" name="roundtrip" Value="1" <%if(updateId.roundTrip === true) {%> checked <%}  %>  required>
            <label class="form-check-label"> Round Trip</label>
        </div>
        <div class="form-check form-check-inline">
            <input type="radio" class="form-check-input" name="roundtrip" Value="0" <%if(updateId.roundTrip === false) {%> checked <%}  %>>
            <label class="form-check-label"> Single Trip</label>
        </div>
    </div>  
        <div class="form-group">
            <label>Final Fuel Figure</label>
            <input type="number" class="form-control" name="finalfuel" value="<%=updateId.finalFuel%>" required min="65000" max="120000">
        </div>
      <div class="form-group">
            <input class="form-control" name="timestamp" value="<%=Date.now()%>" hidden>
        </div>
        <div class="form-group">
            <button type="submit" class="btn-lg btn-block btn-mod">Add to the list</button>
        </div>
    </form>
</div>

<%- include("../partials/footer") %> 