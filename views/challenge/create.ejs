<%- include("../partials/header") %> 

<div class="container" >
    <h1 class="form-new-h1">Add Your List Here</h1>
    <form class="form-new" action="/create" method="POST">
        <div class="form-group">
            <label>Full Name</label>
            <input type="text" class="form-control" name="titlename" placeholder="John Smith" required>
        </div> 
        <div class="row">
            <div class="col-6">
                <div class="form-group">
                    <label>Origin</label>
                    <input type="text" class="form-control" name="titleorigin" placeholder="Boston" required>
                </div> 
            </div>
            <div class="col-6">
                <div class="form-group">
                    <label>Destination</label>
                    <input type="text" class="form-control" name="titledestination" placeholder="Dubai" required>
                </div>   
            </div>
        </div>     
        <div class="form-group">
            <div class="form-check form-check-inline">
            <input type="radio" class="form-check-input" name="roundtrip" Value="1" required>
            <label class="form-check-label"> Round Trip</label>
        </div>
        <div class="form-check form-check-inline">
            <input type="radio" class="form-check-input" name="roundtrip" Value="0">
            <label class="form-check-label"> Single Trip</label>
        </div>
    </div>  
        <div class="form-group">
            <label>Final Fuel Figure</label>
            <input type="number" class="form-control" name="finalfuel" placeholder="65000" required min="65000" max="120000">
        </div>
      <div class="form-group">
            <input class="form-control" name="timestamp" value="<%=Date.now()%>" hidden>
        </div>
        <div class="form-group">
            <button type="submit" class="btn-lg btn-block btn-mod">Add to the list</button>
        </div>
    </form>
</div>

<%- include("../partials/footer") %> 